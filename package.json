{
  "name": "@petarzarkov/erc-playground",
  "description": "Foundry-based playground for developing Solidity smart contracts",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Petar Zarkov",
    "url": "https://github.com/petarzarkov"
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.4.0"
  },
  "devDependencies": {
    "forge-std": "github:foundry-rs/forge-std#v1.9.7",
    "prettier": "3.7.4",
    "solhint": "6.0.2"
  },
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "forge-check": "forge fmt --check",
    "forge-write": "forge fmt",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "bun run forge-check && bun solhint \"src/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "test": "forge test",
    "deploy": "forge script script/Deploy.s.sol:Deploy --rpc-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $API_KEY_ETHERSCAN -vvvv",
    "deploy:multi": "forge script script/DeployMulti.s.sol:DeployMulti --rpc-url $RPC_URL --private-key $PRIVATE_KEY --broadcast --verify --etherscan-api-key $API_KEY_ETHERSCAN -vvvv",
    "verify": "forge verify-contract --chain-id $CHAIN_ID $CONTRACT_ADDRESS src/PeepoToken.sol:PeepoToken --watch"
  }
}
